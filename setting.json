{
    "workbench.colorTheme": "One Monokai",
    "editor.fontSize": 14,
    "eslint.enable": true, // 是否开启vscode的eslint
    "eslint.autoFixOnSave": true, // 是否在保存的时候自动fix eslint
    "eslint.options": { // 指定vscode的eslint所处理的文件的后缀
      "extensions": [
        ".js",
        ".vue",
        ".ts",
        ".tsx"
      ]
    },
    "eslint.validate": [ // 确定校验准则
      "javascript",
      "javascriptreact",
      {
        "language": "html",
        "autoFix": true
      },
      {
        "language": "vue",
        "autoFix": true
      },
      {
        "language": "typescript",
        "autoFix": true
      },
      {
        "language": "typescriptreact",
        "autoFix": true
      }
    ],
    "files.autoSave": "off",
    "files.associations": {
      "*.wpy": "vue",
      "*.wxml": "wxml",
      "*.cjson": "jsonc",
      "*.wxss": "css",
      "*.wxs": "javascript",
      "*.html": "html"
    },
    "emmet.includeLanguages": {
      "wxml": "html"
    }
  }